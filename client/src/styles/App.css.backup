/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  --bg-dark: #0a0e27;
  --bg-card: rgba(255, 255, 255, 0.05);
  --bg-card-hover: rgba(255, 255, 255, 0.08);
  --border-color: rgba(255, 255, 255, 0.1);
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.7);
  --text-tertiary: rgba(255, 255, 255, 0.5);
  --success-color: #4ade80;
  --warning-color: #fbbf24;
  --error-color: #f87171;
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.2);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.4);
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  background: var(--bg-dark);
  background-image:
    radial-gradient(at 0% 0%, rgba(102, 126, 234, 0.2) 0px, transparent 50%),
    radial-gradient(at 100% 100%, rgba(118, 75, 162, 0.2) 0px, transparent 50%);
  color: var(--text-primary);
  line-height: 1.6;
  overflow-x: hidden;
}

/* App Container */
.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Header */
.app-header {
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid var(--border-color);
  padding: 1.5rem 2rem;
  box-shadow: var(--shadow-sm);
}

.header-content {
  max-width: 1800px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
}

.header-left {
  flex: 1;
}

.app-title {
  font-size: 1.75rem;
  font-weight: 700;
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.25rem;
}

.database-info {
  font-size: 0.875rem;
  color: var(--text-tertiary);
}

.upload-button {
  background: var(--primary-gradient);
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-md);
}

.upload-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.upload-button:active {
  transform: translateY(0);
}

/* Main Content */
.app-content {
  flex: 1;
  max-width: 1800px;
  width: 100%;
  margin: 0 auto;
  padding: 2rem;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}

.left-panel, .right-panel {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Common Card Styles */
.dashboard, .chatbox, .upload-history {
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  padding: 1.5rem;
  box-shadow: var(--shadow-md);
}

/* Section Titles */
.section-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subsection-title {
  font-size: 1.125rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
}

/* Dashboard Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.stat-card {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  padding: 1.25rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s ease;
}

.stat-card:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

.stat-card.alert {
  border-left: 3px solid var(--error-color);
}

.stat-card.success {
  border-left: 3px solid var(--success-color);
}

.stat-icon {
  font-size: 2rem;
}

.stat-value {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--text-primary);
}

.stat-label {
  font-size: 0.875rem;
  color: var(--text-secondary);
}

/* Top Hosts */
.top-hosts {
  margin-bottom: 1.5rem;
}

.hosts-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.host-item {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  padding: 0.875rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s ease;
}

.host-item:hover {
  background: rgba(255, 255, 255, 0.1);
}

.host-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.host-rank {
  background: var(--primary-gradient);
  color: white;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.75rem;
  font-weight: 700;
}

.host-name {
  font-weight: 600;
  color: var(--text-primary);
}

.host-stats {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.host-total {
  font-weight: 700;
  color: var(--text-primary);
}

.host-active {
  font-size: 0.875rem;
  color: var(--error-color);
}

/* Recent Alerts */
.recent-alerts {
  max-height: 600px;
  overflow-y: auto;
}

.alerts-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.alert-item {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-left: 3px solid var(--border-color);
  border-radius: 0.5rem;
  padding: 1rem;
  transition: all 0.2s ease;
}

.alert-item:hover {
  background: rgba(255, 255, 255, 0.1);
}

.alert-item.problem {
  border-left-color: var(--error-color);
}

.alert-item.resolved {
  border-left-color: var(--success-color);
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.alert-status {
  font-weight: 600;
  font-size: 0.875rem;
}

.alert-status.problem {
  color: var(--error-color);
}

.alert-status.ok,
.alert-status.resolved {
  color: var(--success-color);
}

.alert-time {
  font-size: 0.75rem;
  color: var(--text-tertiary);
}

.alert-details {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.alert-host {
  font-weight: 600;
  color: var(--text-primary);
}

.alert-type {
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.severity-badge {
  display: inline-block;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 600;
  margin-top: 0.25rem;
}

.severity-badge.critical {
  background: rgba(248, 113, 113, 0.2);
  color: var(--error-color);
}

.severity-badge.high {
  background: rgba(251, 191, 36, 0.2);
  color: var(--warning-color);
}

.severity-badge.warning {
  background: rgba(251, 191, 36, 0.15);
  color: var(--warning-color);
}

.severity-badge.low {
  background: rgba(74, 222, 128, 0.2);
  color: var(--success-color);
}

/* ChatBox */
.chatbox {
  height: calc(100vh - 10rem);
  display: flex;
  flex-direction: column;
}

.chatbox-header {
  margin-bottom: 1rem;
}

.chatbox-subtitle {
  font-size: 0.875rem;
  color: var(--text-secondary);
}

/* Quick Questions */
.quick-questions {
  flex: 1;
  overflow-y: auto;
}

.question-category {
  margin-bottom: 1.5rem;
}

.category-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.question-buttons {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.quick-question-btn {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  padding: 0.75rem 1rem;
  border-radius: 0.5rem;
  text-align: left;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.875rem;
}

.quick-question-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(102, 126, 234, 0.5);
  transform: translateX(4px);
}

/* Chat Messages */
.chat-messages {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 1rem;
  padding-right: 0.5rem;
}

.message {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  padding: 1rem;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message.user {
  border-left: 3px solid #667eea;
}

.message.assistant {
  border-left: 3px solid #764ba2;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.message-role {
  font-weight: 600;
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.message-type {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-weight: 600;
}

.message-type.sql {
  background: rgba(74, 222, 128, 0.2);
  color: var(--success-color);
}

.message-type.rag {
  background: rgba(102, 126, 234, 0.2);
  color: #667eea;
}

.message-content {
  color: var(--text-primary);
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* Loading Dots Animation */
.loading-dots {
  display: flex;
  gap: 0.5rem;
}

.loading-dots span {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--text-secondary);
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading-dots span:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dots span:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* Message Sources */
.message-sources {
  margin-top: 0.75rem;
  padding-top: 0.75rem;
  border-top: 1px solid var(--border-color);
}

.message-sources details summary {
  cursor: pointer;
  font-size: 0.875rem;
  color: var(--text-secondary);
  user-select: none;
}

.message-sources details summary:hover {
  color: var(--text-primary);
}

.sources-list {
  margin-top: 0.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.source-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 0.375rem;
  padding: 0.75rem;
  font-size: 0.875rem;
}

.source-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.25rem;
}

.source-similarity {
  color: var(--success-color);
  font-size: 0.75rem;
}

.source-details {
  color: var(--text-secondary);
  font-size: 0.8125rem;
}

/* Chat Input */
.chat-input-form {
  display: flex;
  gap: 0.75rem;
}

.chat-input {
  flex: 1;
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  padding: 0.875rem 1rem;
  border-radius: 0.5rem;
  font-size: 0.9375rem;
  transition: all 0.2s ease;
}

.chat-input:focus {
  outline: none;
  border-color: #667eea;
  background: rgba(255, 255, 255, 0.08);
}

.chat-input::placeholder {
  color: var(--text-tertiary);
}

.chat-send-btn {
  background: var(--primary-gradient);
  color: white;
  border: none;
  padding: 0.875rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.chat-send-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.chat-send-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Upload History */
.upload-history {
  max-height: 400px;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  max-height: 300px;
  overflow-y: auto;
}

.history-item {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  padding: 0.875rem;
  transition: all 0.2s ease;
}

.history-item:hover {
  background: rgba(255, 255, 255, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.history-filename {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.9375rem;
}

.history-status {
  font-size: 1.25rem;
}

.history-details {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.5rem;
  font-size: 0.8125rem;
}

.history-stat {
  display: flex;
  justify-content: space-between;
}

.history-label {
  color: var(--text-secondary);
}

.history-value {
  color: var(--text-primary);
  font-weight: 600;
}

.history-value.success {
  color: var(--success-color);
}

.empty-message {
  color: var(--text-tertiary);
  text-align: center;
  padding: 2rem;
  font-size: 0.875rem;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(5px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  background: var(--bg-dark);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  width: 90%;
  max-width: 600px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: var(--shadow-lg);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.modal-header h2 {
  font-size: 1.5rem;
  font-weight: 700;
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.modal-close {
  background: none;
  border: none;
  color: var(--text-secondary);
  font-size: 2rem;
  cursor: pointer;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
}

.modal-close:hover {
  background: var(--bg-card-hover);
  color: var(--text-primary);
}

.modal-body {
  padding: 1.5rem;
}

.modal-footer {
  padding: 1.5rem;
  border-top: 1px solid var(--border-color);
  display: flex;
  justify-content: flex-end;
  gap: 0.75rem;
}

/* File Drop Zone */
.file-drop-zone {
  border: 2px dashed var(--border-color);
  border-radius: 0.75rem;
  padding: 3rem 2rem;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  background: var(--bg-card-hover);
  margin-bottom: 1.5rem;
}

.file-drop-zone:hover,
.file-drop-zone.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.drop-zone-content {
  pointer-events: none;
}

.drop-zone-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.drop-zone-content h3 {
  font-size: 1.25rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.drop-zone-content p {
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.drop-zone-hint {
  font-size: 0.875rem;
  color: var(--text-tertiary) !important;
}

/* Selected Files */
.selected-files {
  margin-bottom: 1.5rem;
}

.selected-files h3 {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
}

.file-item {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  padding: 0.75rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.file-name {
  font-weight: 600;
  color: var(--text-primary);
}

.file-size {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

/* Upload Preview */
.upload-preview {
  background: var(--bg-card-hover);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  padding: 1.25rem;
  margin-bottom: 1.5rem;
}

.upload-preview h3 {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.preview-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
}

.preview-stat {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.875rem;
}

.preview-stat.full-width {
  grid-column: 1 / -1;
}

.preview-label {
  color: var(--text-secondary);
}

.preview-value {
  font-weight: 700;
  color: var(--text-primary);
}

.preview-value.success {
  color: var(--success-color);
}

.preview-value.warning {
  color: var(--warning-color);
}

.preview-warning {
  margin-top: 1rem;
  padding: 0.75rem;
  background: rgba(251, 191, 36, 0.1);
  border-left: 3px solid var(--warning-color);
  border-radius: 0.375rem;
  color: var(--warning-color);
  font-size: 0.875rem;
}

/* Upload Progress */
.upload-progress {
  margin-bottom: 1.5rem;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: var(--bg-card-hover);
  border-radius: 1rem;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progress-fill {
  height: 100%;
  background: var(--primary-gradient);
  transition: width 0.3s ease;
  border-radius: 1rem;
}

.progress-text {
  text-align: center;
  color: var(--text-secondary);
  font-size: 0.875rem;
}

/* Upload Result */
.upload-result {
  text-align: center;
  padding: 2rem 0;
}

.result-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
}

.result-icon.success {
  color: var(--success-color);
}

.upload-result h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  color: var(--text-primary);
}

.result-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.result-stat {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.result-label {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.result-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
}

.result-value.success {
  color: var(--success-color);
}

.result-message {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

/* Buttons */
.btn {
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
  font-size: 0.9375rem;
}

.btn-primary {
  background: var(--primary-gradient);
  color: white;
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.btn-secondary {
  background: var(--bg-card-hover);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Loading & Error States */
.loading, .error {
  text-align: center;
  padding: 2rem;
  color: var(--text-secondary);
}

.error {
  color: var(--error-color);
}

/* Scrollbar Styles */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 1rem;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* Responsive Design */
@media (max-width: 1200px) {
  .app-content {
    grid-template-columns: 1fr;
  }

  .chatbox {
    height: 600px;
  }
}

@media (max-width: 768px) {
  .app-header {
    padding: 1rem;
  }

  .header-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .app-title {
    font-size: 1.5rem;
  }

  .upload-button {
    width: 100%;
  }

  .app-content {
    padding: 1rem;
    gap: 1rem;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .preview-stats,
  .result-stats {
    grid-template-columns: 1fr;
  }
}
